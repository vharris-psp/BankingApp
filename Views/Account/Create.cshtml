@model BankingApp.Models.AccountCreateViewModel

@{
    ViewData["Title"] = "Create Account";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <!--TODO: Make account number automatic -->
    <div class="form-group">
        <label asp-for="AccountNumber">Account Number:</label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerId">Account Owner:</label>
        <select asp-for="OwnerId" class="form-control" asp-items="Model.People"></select>
    </div>

    <div class="form-group">
        <label asp-for="CoOwnerId">Co-Owner:</label>
        <select asp-for="CoOwnerId" class="form-control" asp-items="Model.People">
            <option value="">(No Co-Owner)</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Balance">Initial Investment:</label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>
